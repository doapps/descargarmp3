<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado Presionado -->
    <item android:state_pressed="true"><shape android:shape="rectangle">
        <corners android:radius="10dp" />

            <stroke android:width="2dp" android:color="@color/nomad_blue" />

            <solid android:color="@color/color_blanco" />
        </shape></item>
    <!-- Estado Focuseado -->
    <item android:state_focused="true"><shape android:shape="rectangle">
            <corners android:radius="10dp" />

            <stroke android:width="2dp" android:color="@color/plomo_claro_clouds" />

            <solid android:color="@color/color_blanco" />
        </shape></item>

    <!-- Estado Normal -->
    <item><shape android:shape="rectangle">
        <corners android:radius="10dp" />

            <stroke android:width="2dp" android:color="@color/plomo_claro_silver" />

            <solid android:color="@color/color_blanco" />
        </shape></item>

</selector>